  <link rel="shortcut icon" href="/img/logo-with.png" type="image/x-icon">
  <!-- locomotive css cdn  -->
  <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.css"
/>
</head>

<body>


  <body>
    <div id="main">
      <nav>
        <div class="l">
          <img src="/img/logowithout.png" alt="">
          
        </div>
        <div class="m">
          <a href="/home">Home</a>
          <a class="current" href="/item">Items</a>
          <a href="/history">Histroy</a>
          <a href="/add">Add Items</a>
          <a href="/order">My Orders</a>

        </div>
        <div class="r">
          <a href="/cart"><i class="ri-shopping-cart-2-line"></i></a>

          <h3><%= user.username  %></h3>
          <div class="div">
            <a class="" href="/profile"><img src="/img/upload/<%= user.profilepic  %>" alt=""></a>
          </div>
          <a class="logout" href="/logout">Logout</a>
        </div>

      </nav>

      <div class="page1">
        <div class="top">
          <div class="l">

            <h1>Sofa Products</h1>
            <p>Discover new homes, rentals, and properties around you</p>
          </div>
          <!-- <div class="r">
            <button class="view">View All</button>
          </div> -->
        </div>
        <div class="cards" style="display: flex; flex-wrap: wrap; gap: 3.5rem; align-items: center; justify-content: center;">
         
              <% sofa.reverse().forEach(function(post){ %>
                
                
                <div class="card " style="width: 25rem; height: 500px;">
                  <img src="/img/upload/<%= post.picture  %>" class="card-img-top img-post"  alt="...">
                  <div class="card-body">
                    <div class="card-top">

                      <div class="t">
                        <div class="tt">

                          <h5 class="card-title"><%= post.title  %></h5>
                           <p><%= dater(new Date(post.date))  %></p>
                        </div>
                        <p class="card-text">&#8377 <%= post.price.toLocaleString("en-IN")  %>/Month</p>
                      </div>
                      <div class="b">
                        <h4>5.0 <i class="ri-star-fill"></i></h4>
                        
                      </div>
                    </div>
                    <div class="div">
                      <div class="div-l">
                        <a href="/show/<%= post._id  %>"><button class="more">More Details</button></a>
                        <a href=""><button class="cart"><i class="ri-shopping-cart-2-line"></i></button></a>
                      </div>
                      <div class="div-r">
                        <a href=""><h5><%= post.username  %></h5></a>
                        <div class="img">
                          <a href="<%= post.user._id  %>"><img src="/img/upload/<%= post.user.profilepic  %>" alt=""></a>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>
             
            <!-- </a> -->
              <% }) %>
            </div>
          
     
    </div>
    <!--locomotive js --> 
   <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.js"></script>
   <!--gsap  --> 
   <script
     src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
     integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
     crossorigin="anonymous"
     referrerpolicy="no-referrer"
   ></script>
    <!--Scroll tigger  --> 
   <script
     src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
     integrity="sha512-onMTRKJBKz8M1TnqqDuGBlowlH0ohFzMXYRNebz+yOcc5TQr/zAKsthzhuv0hiyUKEiQEQXEynnXCvNTOk50dg=="
     crossorigin="anonymous"
     referrerpolicy="no-referrer"
   ></script>
