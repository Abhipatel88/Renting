        href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
        rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="shortcut icon" href="/img/logo-with.png" type="image/x-icon">
  <!-- locomotive css cdn  -->
  <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.css"
/>
</head>
<body>
<div id="main">
    
    <nav>
        <div class="l">
          <img src="/img/logowithout.png" alt="">
        </div>
        <div class="m">
          <a href="/history">Histroy/Edit</a>
        </div>
        <div class="r">
          <h3><%= user.username  %></h3>
          <div class="div">
            <a class="" href="/profile"><img src="/img/upload/<%= user.profilepic  %>" alt=""></a>
          </div>
          <a class="logout" href="/logout">Logout</a>
        </div>

      </nav>
    <div class="page1">
        <div class="box">
            
            <form id="fileform" method="post" enctype="multipart/form-data" action="/updatepost/<%= post._id  %>">
                <div class="div">
                    <h1>Add Products</h1>
                    <img class="profile" id="im" src="/img/upload/<%= post.picture  %>" alt="">
                </div>
                <div class="r">
                    <!-- <button id="editbtn" class="editimage" ">Add Images</button> -->
                    <input id="selectedFile" type="file" name="image" onclick="document.getElementById('selectedFile').click()"">
                    <label for="">Product_Title</label>
                    <input type="text" id="name" name="title" value="<%= post.title  %>" placeholder="Enter Your Product Title"  >
                    <label for="text">Product Description</label>
                    <input type="text" id="email" name="description" value="<%= post.description  %>" placeholder="Enter Your Description">
                    <label for="furniture">Choose a piece of furniture:</label>
                    <select id="furniture" name="type" >
                        <option value="sofa">Sofa</option>
                        <option value="chair">Chair</option>
                        <option value="table">Table</option>
                        <option value="bed">Bed</option>
                        <option value="cabinet">Cabinet</option>
                        <option value="shelf">Shelf</option>
                        <option value="lamp">Lamp</option>


                        <!-- <option value="desk">Desk</option> -->
                    </select>
                    <label for="price">Price</label>
                    <input type="text" id="password" name="price" value="<%= post.price  %>" placeholder="Enter Your Price">
                    <button class="update" type="submit">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

 <!--locomotive js --> 
 <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.js"></script>
